<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/Lin_lay"
	tools:context="app.org.scit.timer.MainActivity"
	android:orientation="vertical"
	android:weightSum="1">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:orientation="horizontal"
		android:gravity="center"
		android:background="@drawable/border"
		android:columnCount="3"
		android:rowCount="1">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="현재 운동"
			android:layout_weight="1"
			android:textAlignment="center"
			android:id="@+id/Total_size"
			android:textSize="20dp"
			android:textStyle="bold"
			android:theme="@style/AppTheme"/>

	</LinearLayout>
<LinearLayout

	android:layout_width="match_parent"
	android:layout_height="50dp"
	android:orientation="horizontal"
    android:gravity="center"

	>
	<TextView
		android:background="@drawable/border"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:text="1"
		android:gravity="center"
	    android:layout_weight="1"
	    android:textAlignment="center"
	    android:id="@+id/before"
	    android:onClick="onClick_Exercise"
	    android:tag="before"
		/>
	<TextView
		android:background="@drawable/border"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
		android:text="2"
	    android:layout_gravity="center"
		android:layout_weight="1"
		android:textAlignment="center"
	    android:id="@+id/now"
		android:onClick="onClick_Exercise"
		/>
	<TextView
		android:background="@drawable/border"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:layout_weight="1"
		android:gravity="center"
		android:textAlignment="center"
	    android:id="@+id/future"

		android:onClick="onClick_Exercise"
		android:text="3"/>
	<TextView
		android:background="@drawable/border"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:layout_weight="1"
		android:gravity="center"
		android:textAlignment="center"
		android:onClick="onClick_Exercise"
		android:id="@+id/future_further"
		android:text="4"/>
	<TextView
		android:background="@drawable/border"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:layout_weight="1"
		android:gravity="center"
		android:textAlignment="center"
		android:id="@+id/futureOfFuture"
		android:onClick="onClick_Exercise"
		android:text="5"/>

</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:orientation="horizontal"
		android:background="@drawable/border"
	    android:id="@+id/info"
	    android:weightSum="4"
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=""
		    android:layout_weight="1"
		    android:id="@+id/view_title"
			android:layout_gravity="center"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="시간 : "
			android:layout_weight="1"
			android:id="@+id/view_time"
			android:layout_gravity="center"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="반복횟수"
			android:layout_weight="1"
			android:id="@+id/view_interval"
			android:layout_gravity="center"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="휴식시간 : "
			android:layout_weight="1"
			android:id="@+id/view_rest"
			android:layout_gravity="center"/>


	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/LeftTime"
		android:textSize="150dp"
		android:textAlignment="center"
		android:layout_weight="0.99"
		android:text="3"
		android:paddingBottom="15dp"
		android:gravity="center"/>

	<Button
		android:id="@+id/Stop"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/border"
		android:text="일시정지"
		android:theme="@android:style/Widget.Holo.Light.Button.Inset" />

	<Button
		android:id="@+id/kakao_logout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/border"
		android:text="일시정지"
		android:theme="@android:style/Widget.Holo.Light.Button.Inset" />

</LinearLayout>
